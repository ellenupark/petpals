<h1>This is the user show page</h1>

<% if current_user == User.all.find_by_id(params[:id]) %>
    <p>Your profile page!</p>
<% end %>


<h3>Here are all your pets:</h3>
<% @pets.each do | pet | %>
    <%= link_to pet.name, pet_path(pet.id) %>
<% end %>

<% if !current_user.confirmed_events.empty? %>
    <h3>Your Upcoming Events </h3>
    <% current_user.confirmed_events.each do | event | %>
            <p><%= event.date.strftime("%A, %B %eth, %Y at %l:%M%p") %></p>
            <p>Playdate with <%= event.host_pet.name %></p>
    <% end %>
<% end %>

<% if current_user %>
<% current_user.events.each do | event | %>
    <% if event.accepted != true %>
        <h3><%= event.host.username %> has invited you to the following playdate: </h3>
        <p><%= event.date.strftime("%A, %B %eth, %Y at %l:%M%p") %></p>
        <p>Pet Name: <%= Pet.all.find_by_id(event.host_pet).name %></p>
        <%= link_to "Accept", "/events/#{event.id}/accept", method: :patch %>
        <%= link_to "Decline", "/events/#{event.id}/decline", method: :patch %>
    <% elsif event.accepted == true %>
            <h3>Your Upcoming Events </h3>
            <p><%= event.date.strftime("%A, %B %eth, %Y at %l:%M%p") %></p>
            <p>Playdate with <%= event.host_pet.name %></p>
        <% end %>
<% end %>
