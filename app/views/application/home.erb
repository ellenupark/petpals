<section class="index-page">
    <div class="top-banner">
        <div class="logo-box">
            <img src="logo.png">
        </div>
    </div>
    <h1>Featured Pet</h1>
                <div class="column is-narrow profile-card">
                    <%= image_tag(@pet.avatar, style: "max-width: 100px", :class => "card-img") %>
                    <p class="bold-font"><%= link_to @pet.name, pet_path(@pet.id) %></p>
                    <p>Breed: <%= @pet.breed %></p>
                    <p>Size: <%= @pet.weight %></p>
                    <p>Gender: <%= @pet.gender %></p>
                    <p>Age: <%= @pet.age %></p>
                    <% if !@pet.user.city.blank? && !@pet.user.state.blank? %>
                      <p>Location: <%= @pet.user.city.capitalize %>, <%= @pet.user.state %></p>
                    <% end %>
                </div>      
    <h1 class="title is-1">Is Your Dog Looking For A New Friend?</h1>
    <div class="index-element">
        <img src="dog-profile.jpeg">
        <h5 class="subtitle is-5">Create a profile for you and your dogs</h5>
    </div>
    <div class="index-element">
        <img src="dog-owner.jpg">
        <h5 class="subtitle is-5">Scout out Dogs and Connect with Dog Owners</h5>
    </div>
    <div class="index-element">
        <img src="dog-playing.jpeg">
        <h5 class="subtitle is-5">Schedule Playdates</h5>
    </div>
</section>